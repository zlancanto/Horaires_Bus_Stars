<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_sync">

    <fragment android:id="@+id/fragment_sync" android:name="com.example.horairebusmihanbot.ui.SyncFragment">
        <action android:id="@+id/to_selection" app:destination="@id/fragment_selection" app:popUpTo="@id/fragment_sync" app:popUpToInclusive="true" />
    </fragment>

    <fragment android:id="@+id/fragment_selection" android:name="com.example.horairebusmihanbot.ui.SelectionFragment">
        <action android:id="@+id/to_stops" app:destination="@id/fragment_stops" app:enterAnim="@anim/slide_in_right" />
    </fragment>

    <fragment android:id="@+id/fragment_stops" android:name="com.example.horairebusmihanbot.ui.StopsFragment">
        <argument android:name="routeId" app:argType="string" />
        <argument android:name="dirId" app:argType="integer" />
        <action android:id="@+id/to_schedule" app:destination="@id/fragment_schedule" app:enterAnim="@anim/slide_in_right" />
    </fragment>

    <fragment android:id="@+id/fragment_schedule" android:name="com.example.horairebusmihanbot.ui.ScheduleFragment">
        <argument android:name="stopId" app:argType="string" />
        <action android:id="@+id/to_details" app:destination="@id/fragment_details" app:enterAnim="@anim/slide_in_right" />
    </fragment>

    <fragment android:id="@+id/fragment_details" android:name="com.example.horairebusmihanbot.ui.DetailsFragment">
        <argument android:name="stopId" app:argType="string" />
    </fragment>
</navigation>